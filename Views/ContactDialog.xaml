<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PermissionProMaui.Views.ContactDialog">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0"
              BackgroundColor="{DynamicResource Primary}"
              Padding="12,8">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Button Grid.Column="0" 
                        Text="â†" 
                        FontSize="18" 
                        TextColor="{DynamicResource OnPrimary}"
                        BackgroundColor="Transparent"
                        BorderColor="Transparent"
                        Clicked="OnBackClicked"
                        WidthRequest="40"
                        HeightRequest="40"
                        Margin="0,0,8,0"/>
                <Label Grid.Column="1" Text="Kontakt" FontSize="20" TextColor="{DynamicResource OnPrimary}"/>
                <Label Grid.Column="2" Text="" FontSize="18" TextColor="{DynamicResource OnPrimary}"/>
            </Grid>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1" Padding="20">
            <StackLayout Spacing="20" VerticalOptions="Center">
                <Label Text="Support Kontakt" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
                
                <Frame BackgroundColor="White" 
                       Padding="20" 
                       CornerRadius="8" 
                       HasShadow="True">
                    <StackLayout Spacing="15">
                        <Label Text="windata GmbH" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        
                        <Label Text="Email: support@windata.de" 
                               FontSize="16" 
                               HorizontalOptions="Center"/>
                        
                        <Label Text="Telefon: +49 123 456789" 
                               FontSize="16" 
                               HorizontalOptions="Center"/>
                        
                        <Label Text="Web: www.windata.de" 
                               FontSize="16" 
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>
                
                <Label Text="Bei technischen Fragen oder Problemen wenden Sie sich gerne an unseren Support." 
                       FontSize="14" 
                       TextColor="Gray"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </StackLayout>
        </Grid>
    </Grid>

</ContentPage>
