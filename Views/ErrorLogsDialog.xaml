<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PermissionProMaui.Views.ErrorLogsDialog">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0"
              BackgroundColor="{DynamicResource Primary}"
              Padding="12,8">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Button Grid.Column="0" 
                        Text="←" 
                        FontSize="18" 
                        TextColor="{DynamicResource OnPrimary}"
                        BackgroundColor="Transparent"
                        BorderColor="Transparent"
                        Clicked="OnBackClicked"
                        WidthRequest="40"
                        HeightRequest="40"
                        Margin="0,0,8,0"/>
                <Label Grid.Column="1" Text="EBICS-Fehlerprotokolle" FontSize="20" TextColor="{DynamicResource OnPrimary}"/>
                <Label Grid.Column="2" Text="" FontSize="18" TextColor="{DynamicResource OnPrimary}"/>
            </Grid>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1" Padding="20">
            <StackLayout Spacing="20" VerticalOptions="Center">
                <Label Text="EBICS Fehlerprotokolle" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
                
                <Frame BackgroundColor="White" 
                       Padding="20" 
                       CornerRadius="8" 
                       HasShadow="True">
                    <StackLayout Spacing="15">
                        <Label Text="Keine Fehlerprotokolle vorhanden" 
                               FontSize="16" 
                               TextColor="Gray"
                               HorizontalOptions="Center"/>
                        
                        <Label Text="Alle EBICS-Operationen wurden erfolgreich ausgeführt." 
                               FontSize="14" 
                               TextColor="Green"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </Frame>
                
                <Label Text="Hier werden alle EBICS-Fehler und Warnungen protokolliert." 
                       FontSize="14" 
                       TextColor="Gray"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </StackLayout>
        </Grid>
    </Grid>

</ContentPage>
